<div class="chat">
  <div class="main_header">
    <div class="currentroom_name">
      <%=@room.name%>
    </div>
    <div class="exit_chatroom">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="main_body">
    <div class="massage_wrapper">
      <div class="message_info">
        <div class="messager">
          Ken
        </div>
        <div class="message_date">
          2020/10/28(wed) 12:43:30
        </div>
      </div>
      <div class="message_text">
        おはよう
      </div>
    </div>
    <div class="massage_wrapper">
      <div class="message_info">
        <div class="messager">
          Jen
        </div>
        <div class="message_date">
          2020/10/28(wed) 12:43:30
        </div>
      </div>
      <div class="message_text">
        おはよう
      </div>
    </div>
  </div>
  <%= form_with model: [@room, @message], class: "chat_bar", local: true do |f| %>
    <div class="form_wrapper">
      <div class="form">
        <%= f.text_field :content, placeholder: "type a message" %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: "hidden" %>
        </label>
      </div>
      <div class="form_btn">
        <%= f.submit "送信" %>
      </div>
    </div>
  <% end %>

</div>